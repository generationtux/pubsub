{
    "name": "generationtux/pubsub",
    "description": "Simple Pub/Sub for Lumen & Laravel with drivers for Google Pub/Sub and Amazon SNS.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Troy Harvey",
            "email": "troy.harvey@generationtux.com"
        }
    ],
    "keywords": ["pubsub", "google", "amazon", "sns", "microservices", "cqrs", "message passing", "lumen", "laravel"],
    "minimum-stability": "stable",
    "require": {
        "chrisbarr/amazon-sns-php-api": "^1.5",
        "google/apiclient": "^2.0"
    },
    "require-dev": {
        "illuminate/config": "^5.1",
        "illuminate/http": "^5.1",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.1"
    },
    "autoload": {
        "psr-4": {
            "GenTux\\PubSub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GenTux\\PubSub\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
